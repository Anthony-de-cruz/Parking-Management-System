extends layout

block header
  header
    img.logo(src='images/Designer.png' alt='Company Logo')
    .company-name CarpPark - Home
    if loggedIn
      .account-balance #{user.username} Balance: Â£#{user.balance * 0.01}

block content
  .container
    include includes/nav.pug
    .main-content
      table
        thead
          tr
            th Booking ID
            th Customer Name
            th Date
            th Time
            th Status
            th Modify
        tbody
          each booking in bookings
            tr
              td= booking.booking_id
              td= booking.customer_name
              td= booking.date
              td= booking.time
              td= booking.status

extends layout

block header
  header
    img.logo(src='/images/Designer.png' alt='Company Logo')
    .company-name CarpPark - Admin Alerts
    if loggedIn
      .account-balance #{user.username} Balance: Â£#{user.balance * 0.01}

block content
  .container
    include includes/nav.pug
    .main-content
      if resultMsg
        h2 #{resultMsg}
      if alerts.length
        table.booking-table
          thead
            tr
              th Alert ID
              th Message
              th Timestamp
          tbody
            each alert in alerts
              tr
                td= alert.alert_id
                td= alert.message
                td= alert.timestamp
      else
        p No alerts available.

extends layout
block content
    body
    .login-body-container
        .login-form-container
            h1(style = 'text-align: center;') Welcome to CarpPark
            h2 Register
            form(action='', method='POST')
                label(for='username')
                input#username(type='text' name='username' placeholder='Username' required='')
                br
                label(for='password')
                input#password(type='password' name='password' placeholder='Password' required='')
                br
                label(for='email')
                input#password(type='email' name='email' placeholder='e@mail.com' required='')
                br
                label(for='phone_number')
                input#phone_number(type='tel' name='phone_number' placeholder='Phone Number' required='')
                br
                input(type='submit' value='Register')
            h3 Result: #{registerResult}
            p(style = 'text-align: center;')
                a.navigation-link(href='/login') Back to login
